# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=production
PORT=3001

# Database Configuration
POSTGRES_HOST=your-db-host.com
POSTGRES_PORT=5432
POSTGRES_DB=astro_bsm_portal
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://your-username:your-secure-password@your-db-host.com:5432/astro_bsm_portal

# Security
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random
JWT_SECRET=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Frontend Configuration
VITE_API_URL=https://your-domain.com/api

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Digital Ocean Spaces (optional for file storage)
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_ENDPOINT=https://your-region.digitaloceanspaces.com
DO_SPACES_BUCKET=your-bucket-name

# Redis Configuration (optional for sessions)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private-key.pem